section.first-screen
	.first-screen__bg-hovered
		img(src='images/bg-main/1.jpg', alt='')
		img(src='images/bg-main/2.jpg', alt='')
		img(src='images/bg-main/3.jpg', alt='')
		img(src='images/bg-main/4.jpg', alt='')
		img(src='images/bg-main/1.jpg', alt='')
		img(src='images/bg-main/2.jpg', alt='')
		img(src='images/bg-main/3.jpg', alt='')
		img(src='images/bg-main/4.jpg', alt='')
	.first-screen__bg
		video(src='images/video.webm' autoplay muted loop)
	.header-inner.header-inner--white
		.container.header-inner__container
			a.header-inner__logo(href='#') УГНТУ
			.header-inner__group
				ul
					li
						a(href='#', target='_blank') Поступающим
					li
						a(href='#', target='_blank') Обучающимся
					li
						a(href='#', target='_blank') Alumni
					li
						a(href='#', target='_blank') Наука и инновации
					li
						a(href='#', target='_blank') Бизнесу
					li
						a(href='#', target='_blank') Университет
				+button('', 'header-inner__search js-open-search', 'search', '#')

	.first-screen__container-outer
		.first-screen__container
			include ../partials/menu-column.pug
			+title-block('Ведущий <span> <br> нефтегазовый вуз <br> России</span>', '', 'first-screen__title')
			+slider-arrows('first-screen__nav')
	.first-screen__wrapper.loaded
	.back-images
		.swiper.mySwiper(thumbsSlider="")
			.swiper-wrapper
				.swiper-slide.back-image.back-image1
					img(src='images/bg-main/1.jpg', alt='')
				.swiper-slide.back-image.back-image2
					img(src='images/bg-main/2.jpg', alt='')
				.swiper-slide.back-image.back-image3
					img(src='images/bg-main/3.jpg', alt='')
				.swiper-slide.back-image.back-image4
					img(src='images/bg-main/4.jpg', alt='')

	.first-screen__slider
		ul.swiper-container.__js_slider-header-menu-2
			.swiper-wrapper
				li.swiper-slide(data-id='1')
					a(href='#') Истории успеха
				li.swiper-slide(data-id='2')
					a(href='#') Приемная <span>комиссия</span>
				li.swiper-slide(data-id='3')
					a(href='#') Приоритет 2030
				li.swiper-slide(data-id='4')
					a(href='#') Кампусы
				li.swiper-slide(data-id='1')
					a(href='#') Истории успеха
				li.swiper-slide(data-id='2')
					a(href='#') Приемная <span>комиссия</span>
				li.swiper-slide(data-id='3')
					a(href='#') Приоритет 2030
				li.swiper-slide(data-id='4')
					a(href='#') Кампусы
		ul.mobile.swiper-container.mySwiper2
			.swiper-wrapper
				li.swiper-slide.swiper-slide1
					a(href='#')
						figure
							div
								p Истории успеха
								p Реальные истории студентов
							+button('', '', 'arrow-right')
				li.swiper-slide.swiper-slide2
					a(href='#')
						figure
							div
								p Приемная комиссия
								p Реальные истории студентов
							+button('', '', 'arrow-right')
				li.swiper-slide.swiper-slide3
					a(href='#')
						figure
							div
								p Приоритет 2030
								p Реальные истории студентов
							+button('', '', 'arrow-right')
				li.swiper-slide.swiper-slide4
					a(href='#')
						figure
							div
								p Кампусы
								p Реальные истории студентов
							+button('', '', 'arrow-right')

