		section.news.events-single__other-events
			.container
				.news__top
					+title-block('Другие события', '', 'title-block--black news__title')
					+slider-arrows('slider-arrows--big slider-arrows--dark news__nav news__nav--other')
				.news__sliders-wrapper
					.news__slider.swiper-container.__js_slider-other-events.active
						.swiper-wrapper
							each item in EVENTS_OTHER
								+events-card('swiper-slide', item.img, item.day, item.date, item.time, item.topic)
