extends ../layouts/default

block vars
	-
		const page = {
			title: 'Событие'
		};
	- bodyMod = 'bg-white'
	- headerMod = 'header-inner--white'

block main
	.events-single
		.events-single__banner
			.container
				+breadcrumbs([
					{href: '#', text: 'События'},
					{href: '#', text: 'В УГНТУ проходит студенческая олимпиада «Газпром»'}
				], 'breadcrumbs--white events-single__breadcrumbs')
			.events-single__wrapper
				.events-single__left
					.events-single__left-top
						.events-single__topic
							+button('Университет', 'button--adaptive-size button--blue', '', '#')
						+title-block('В УГНТУ проходит студенческая олимпиада «Газпром»', '', 'events-single__title')
						.events-single__nav
							a.button-back.button-back--white.events-single__back(href='#')
								+button('', 'button-back__btn', 'arrow-left')
								span Назад
							a.events-single__share(href='#') Поделиться
								+button('', '', 'share')
					.events-single__info
						.events-single__info-item
							p Когда
							p 04 - 31 Марта
						.events-single__info-item.events-single__info-item--centered
							p Во сколько
							p 16:00
						.events-single__info-item
							p Где
							p.small ул. Космонавтов 1, <br> Корпус №7, каб. а13
				.events-single__right
					img(src='images/events/1.jpg', srcset='images/events/1@2x.jpg 2x', alt='')
					a.events-single__enroll(href='#', target='_blank') Записаться
